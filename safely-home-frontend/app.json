{
  "expo": {
    "name": "SafelyHome",
    "slug": "safelyhome",
    "version": "1.0.0",
    "orientation": "portrait",
    "runtimeVersion": "1.0.0",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#48426D"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.safelyhome",
      "config": {
        "googleMapsApiKey": "AIzaSyCzsOcj0ZcFzNfyqLskuOQQC2ttgB_0Pyk"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#48426D"
      },
      "package": "com.yourcompany.safelyhome",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.CALL_PHONE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCzsOcj0ZcFzNfyqLskuOQQC2ttgB_0Pyk"
        }
      },
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#48426D",
        "mdpi": "./assets/splash-icon.png",
        "hdpi": "./assets/splash-icon.png",
        "xhdpi": "./assets/splash-icon.png",
        "xxhdpi": "./assets/splash-icon.png",
        "xxxhdpi": "./assets/splash-icon.png"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Safely Home to use your location for ride tracking."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Safely Home to access your camera for driver verification."
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#48426D",
          "image": "./assets/splash-icon.png",
          "imageWidth": 200
        }
      ]
    ],
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://expo.dev/accounts/aliarsalansiddiqui/projects/safelyhome"
    },
    "extra": {
      "eas": {
        "projectId": "b8ca92cc-70e7-4870-bd36-47b1019f8dd1"
      }
    },
    "owner": "aliarsalansiddiqui"
  },
  "eas": {
    "build": {
      "production": {
        "releaseChannel": "production",
        "android": {
          "buildType": "apk"
        }
      }
    }
  }
}
